<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    tools:context="com.zero.hm.effect.timewarpscan.ScanActivity">

    <com.zero.hm.effect.timewarpscan.Camera2SurfaceView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/verticalLineSeparator"
        android:layout_width="5dp"
        android:visibility="gone"
        android:layout_alignStart="@id/camera_view"
        android:background="@drawable/scanline_horizontal"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/horizontalLineSeparator"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_alignTop="@id/camera_view"
        android:background="@drawable/scanline_vertical"
        android:layout_height="5dp"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#682B2B2B"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageButton
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/btnBack"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:background="#00000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:flow_verticalBias="0.0"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/brightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:src="@drawable/ic_brightness"/>

                <ImageButton
                    android:id="@+id/speedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:src="@drawable/ic_time"/>

                <ImageButton
                    android:id="@+id/moreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:src="@drawable/ic_more"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/brightPanel"
                android:visibility="gone"
                android:background="#682B2B2B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="#fff"
                    android:text="Brightness"/>
                <TextView
                    android:id="@+id/brightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="5"/>
                <LinearLayout
                    android:layout_marginTop="14dp"
                    android:layout_below="@id/brightText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_brightness"/>
                    <SeekBar
                        android:min="-20"
                        android:max="20"
                        android:progress="0"
                        android:id="@+id/brightControl"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:thumbTint="#fff"
                        android:progressTint="#fff"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/morePanel"
                android:visibility="gone"
                android:background="#682B2B2B"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/delayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_timer"
                    android:textColor="#fff"
                    android:text="3s delay"/>
                <TextView
                    android:layout_toRightOf="@id/delayButton"
                    android:id="@+id/flashButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_flash_off"
                    android:textColor="#fff"
                    android:text="Flash off"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/speedPanel"
                android:visibility="gone"
                android:background="#682B2B2B"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/speedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="#fff"
                    android:text="Speed"/>

                <RadioGroup
                    android:layout_marginTop="14dp"
                    android:layout_below="@id/speedLabel"
                    android:id="@+id/speed"
                    android:orientation="horizontal"
                    android:checkedButton="@id/normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="#ffffff"
                        android:textColor="#ffffff"
                        android:text="Normal"/>
                    <RadioButton
                        android:id="@+id/fast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:textColor="#ffffff"
                        android:text="Fast"/>
                </RadioGroup>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bottombar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#682B2B2B"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/effectMode"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/switch_background"
            android:checkedButton="@+id/horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <RadioButton
                android:id="@+id/horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/switch_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:paddingBottom="10dp"
                android:text="Horizontal"
                android:textColor="@drawable/switch_color_selector"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/switch_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:text="Vertical"
                android:textColor="@drawable/switch_color_selector"
                android:textSize="15sp" />
        </RadioGroup>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/effectMode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:id="@+id/cameraPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_border"
                android:padding="1dp">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnCamera"
                    app:elevation="0dp"
                    app:fabSize="normal"
                    app:fabCustomSize="64dp"
                    android:src="@drawable/ic_camera"
                    app:maxImageSize="36dp"
                    app:tint="#fff"
                    app:backgroundTint="#1976D2"
                    app:useCompatPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/cameraPart"
                android:layout_marginLeft="15dp"
                android:id="@+id/btnCandidate"
                app:elevation="0dp"
                app:fabSize="normal"
                app:fabCustomSize="48dp"
                android:src="@drawable/ic_recorder"
                app:maxImageSize="36dp"
                app:tint="#fff"
                app:backgroundTint="#282828"
                app:useCompatPadding="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <Button
            android:visibility="invisible"
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            android:text="Reset"
            android:textColor="#ffffff"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/btnSwap"
            app:layout_constraintTop_toTopOf="@id/btnClear"
            app:layout_constraintBottom_toBottomOf="@id/btnClear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/ic_reset"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/counterText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="100sp"
        android:text="3"/>


    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#fff"/>

</androidx.constraintlayout.widget.ConstraintLayout>